extends layout

block includes
  link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/components/table.min.css')
  link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/components/dropdown.min.css')
  link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/components/menu.min.css')
  link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/components/form.min.css")
  link(rel="stylesheet", href="/stylesheets/style.css")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.js")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/components/dropdown.min.js")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/components/form.min.js")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/components/modal.min.js")
  script(src="https://cdn.jsdelivr.net/npm/js-cookie@2/src/js.cookie.min.js")
  script(src="/js/menu.js")

block content
  h1(class="tiitel")= title
  include includes/ageConfirmation
  include includes/header
  div(class="ui form")
    div(class="grouped fields")
      div(class="field")
        div(class="ui radio checkbox esimeneSort")
          input(type="radio" name="odavamad" value="1" checked="checked")
          label Odavamad enne
        div(class="ui radio checkbox")
          input(type="radio" name="odavamad" value="2")
          label Kallimad enne
  if products
    each product in products
      div(class="ui grid indexPage")
        div(class="one wide column")
        div(class="three wide column")
          div(class="image fixedImage")
            a(href=product.url)
              img(src=product.stores[0].imageUrl)
        div(class="five wide column alkoTekstIndex")
          div(class="paragraph alkoTekstiKirjeldus")
            a(href=product.url) #{product.showName}
              br
              | #{product.vol}% #{product.ml} ml
        div(class="two wide column")
        div(class="five wide column alkoHindIndex")
          | #{product.cheapestPrice} â‚¬

  if products
    table(class="ui celled table uusimad")
      thread
        tr
          th Koodinimi
          th %
          th ml
          th Kategooria
      tbody
        each product in products
          tr
            td(class='data-label')
              a(href=product.url) #{product.name}
            td(class='data-label') #{product.vol}%
            td(class='data-label') #{product.ml}ml
            td(class='data-label') #{product.category}
